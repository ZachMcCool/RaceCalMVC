@model IEnumerable<RaceCal.Models.SeriesListItem>

@{
    ViewData["Title"] = "Index";
}

<div style="width: 100%; height: 100%; background-color:rgba(255, 255, 255, 0.8)">

    <div class="text-center mb-5 pt-5 border border-black bg-light text-dark rounded" style="height: 100%;"> 

<h1>Series</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

</div>



        <div class="row justify-content-evenly">

@foreach (var item in Model) {

         <div class="card background-light text-center" style="width: 18rem; margin-bottom: 3rem; --bs-bg-opacity: .5;">

  <div class="card-body">
        <h4 class="card-title text-dark"> @Html.DisplayFor(modelItem => item.Title) </h4>
  </div>

  <div class="card-body">
    <div>
                @Html.ActionLink("Edit", "Edit", new { id=item.SeriesId }) |
                @Html.ActionLink("Details", "Details", new { id=item.SeriesId }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.SeriesId })
    </div>
  </div>
</div>


}
</div>

</div>

