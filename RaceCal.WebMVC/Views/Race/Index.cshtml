@model IEnumerable<RaceCal.Models.RaceListItem>

@{
    ViewData["Title"] = "Index";
}

<div style="width: 100%; height: 100%; background-color:rgba(255, 255, 255, 0.8)">


<div class="text-center mb-5 pt-5 border border-black bg-light text-dark rounded" > 
<h1>Races</h1>

<p>
    <a asp-action="Create">Create New Race</a>
</p>
</div>


<section class="container">
<div class="row justify-content-evenly">
@foreach (var item in Model) {

    <div class="card background-light text-center" style="width: 18rem; margin-bottom: 3rem; --bs-bg-opacity: .5;">

  <div class="card-body">
    <h5 class="card-title text-dark"> @Html.DisplayFor(modelItem => item.RaceTime) </h5>
    <hr>
        <h4 class="card-title text-dark"> @Html.DisplayFor(modelItem => item.Title) </h4>

  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">
        <div><strong>@Html.DisplayNameFor(model => model.SeriesTitle)</strong></div>
        <div>@Html.DisplayFor(modelItem => item.SeriesTitle)</div>    </li>
    <li class="list-group-item">
        <div><strong>@Html.DisplayNameFor(model => model.TrackName)</strong></div>
        <div>@Html.DisplayFor(modelItem => item.TrackName)</div>
        </li>
        <li class="list-group-item">
        <div><strong>@Html.DisplayNameFor(model => model.Broadcast)</strong></div>
        <div>@Html.DisplayFor(modelItem => item.Broadcast)</div>            
    </li>

  </ul>
  <div class="card-body">
    <div>
                @Html.ActionLink("Edit", "Edit", new { id=item.RaceId }) |
                @Html.ActionLink("Details", "Details", new { id=item.RaceId }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.RaceId })
    </div>
  </div>
</div>
}
</div>
</section>
</div>



