@model IEnumerable<RaceCal.Models.TrackListItem>

@{
    ViewData["Title"] = "Index";
}
<div style="width: 100%; height: 100%; background-color:rgba(255, 255, 255, 0.8)">

<div class="text-center mb-5 pt-5 border border-black bg-light text-dark rounded" > 
<h1>Tracks</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
</div>

<section class="container">
<div class="row justify-content-evenly">
@foreach (var item in Model) {

    <div class="card background-light text-center" style="width: 18rem; margin-bottom: 3rem;">

  <div class="card-body">
    <h4 class="card-title text-dark"> @Html.DisplayFor(modelItem => item.TrackName) </h4>


  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">
        <div><strong>@Html.DisplayNameFor(model => model.Location)</strong></div>
        <div>@Html.DisplayFor(modelItem => item.Location)</div>    </li>
  </ul>
  <div class="card-body">
    <div>
                @Html.ActionLink("Edit", "Edit", new { id=item.TrackId }) |
                @Html.ActionLink("Details", "Details", new { id=item.TrackId }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.TrackId })
    </div>
  </div>
</div>
}
</div>
</section>
</div>
